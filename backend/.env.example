# Database Configuration
DATABASE_URL=postgresql://postgres@localhost:5432/sirius_jobs?schema=public

# MongoDB (for consultation features - optional)
# Option 1: MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/dbname

# Option 2: Local MongoDB (recommended for development)
# MONGODB_URI=mongodb://localhost:27017/sirius_consultations

# Paystack Configuration (for payments)
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key
PAYSTACK_SECRET_KEY=sk_test_your_secret_key
PAYSTACK_SECRET=sk_test_your_secret_key

# CORS Configuration
CLIENT_ORIGIN=http://localhost:5500,http://127.0.0.1:5500

# Security Configuration
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_very_long_random_secret_key_here
JWT_EXPIRY=7d

# Account Security
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Session Management
SESSION_TIMEOUT_HOURS=24

# Logging
LOG_LEVEL=info

# Server Configuration
PORT=4000
NODE_ENV=development
